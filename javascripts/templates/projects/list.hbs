<table class="table">
 <thead>
    <tr>
        <th>&nbsp;</span></th>
        <th>Name</th>
        <th>Brand</th>
        <th>System</th>
        <th>?</th>
        <th>Framework</th>
        <th>Technos</th>
        <th>Enabled</th>
        {{#if isAdmin}}<th>Users</th>{{/if}}
        <th>Vms</th>
        <th>Date</th>
    </tr>
</thead>
<tbody>
  {{#each project in projects}}
    <tr>
      {{#if project.owner}}
        <td>{{input type="checkbox" checked=project.todelete}}</td>
      {{else}}
        <td>&nbsp;</td>
      {{/if}}

      {{#if isAdmin}}
        <td>{{#linkTo 'projects.edit' project.id}}{{project.name}}{{/linkTo}}</td>
      {{else}}
        <td>{{project.name}}</td>
      {{/if}}

      {{#if isAdmin}}
        <td>{{#linkTo 'projects.bybrand' project.brand.id}}{{project.brand.name}}{{/linkTo}}</td>
      {{else}}
        <td>{{project.brand.name}}</td>
      {{/if}}

      <td>{{project.systemimagetype.name}}</td>
      <td><button {{action "showDetails" project}} class="btn btn-default"><span  class="glyphicon glyphicon-new-window"></span></button></td>
      <td>{{project.framework.name}}</td>
      <td>{{#each project.technos}}{{name}}<br>{{/each}}</td>
      <td>{{project.enabled}}</td>
      {{#if isAdmin}}
        <td>{{#linkTo 'users.byproject' project.id}}{{project.users.length}}{{/linkTo}}</td>
      {{/if}}

      {{#if isAdmin}}
        <td>{{#linkTo 'vms.byproject' project.id}}{{project.vms.length}}{{/linkTo}}</td>
      {{else}}
        <td>{{#linkTo 'vms.byproject' project.id}}here{{/linkTo}}</td>
      {{/if}}
      <td>{{project.created_at_short}}</td>
    </tr>
  {{/each}}
</tbody>
</table>
{{#if isProjectCreate}}
<div class="btn-group" style="margin: 9px 0 5px;">
    <button {{action "newItem"}} class="btn btn-default"><span class="glyphicon glyphicon-plus-sign"></span></button>
  {{#if isShowingDeleteConfirmation}}
    <button {{action "deleteItems"}} class="btn btn-default"><span class="glyphicon glyphicon-remove"></span> Confirm to delete list</button>
  {{else}}
    <button {{action "showDeleteConfirmation"}} class="btn btn-default"><span class="glyphicon glyphicon-trash"></span></button>
  {{/if}}
  
</div>
{{/if}}

