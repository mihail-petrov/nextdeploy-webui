<table class="table">
 <thead>
    <tr>
        {{#if isVm}}<th><span {{action "toggleDeleteAll"}} class="glyphicon glyphicon-check"></span></th>{{/if}}
        <th>Commit</th>
        <th>Uri</th>
        <th>Status</th>
        <th>Project</th>
        <th>System</th>
        <th>User</th>
        <th>Floating_ip</th>
        <th>Sizing</th>
        <th>Date</th>
    </tr>
</thead>
<tbody>
  {{#each}}
    <tr>
        {{#if controller.isVm}}<td>{{input type="checkbox" checked=todelete}}</td>{{/if}}
        <td>{{commit.short_id}}</td>
        <td><span {{action "showUri" name project.login project.password project.technos}} class="glyphicon glyphicon-new-window"></span></td>
        {{#if sucStatus}}<td class="success">{{textStatus}}</td>{{/if}}
        {{#if warnStatus}}<td class="warning">{{textStatus}}</td>{{/if}}
        {{#if dangStatus}}<td class="danger">{{textStatus}}</td>{{/if}}
        <td>{{project.name}}</td>
        <td>{{systemimage.name}}</td>
        <td>{{user.email}}</td>
        <td>{{floating_ip}}</td>
        <td>{{vmsize.title}}</td>
        <td>{{created_at_short}}</td>
    </tr>
    {{/each}}
</tbody>
</table>
{{#if isVm}}
<div class="btn-group" style="margin: 9px 0 5px;">
    <button {{action "newItem"}} class="btn btn-default"><span class="glyphicon glyphicon-plus-sign"></span></button>
{{#if isShowingDeleteConfirmation}}
  <button {{action "deleteItems"}} class="btn btn-default"><span class="glyphicon glyphicon-remove"></span> Confirm to delete list</button>
{{else}}
  <button {{action "showDeleteConfirmation"}} class="btn btn-default"><span class="glyphicon glyphicon-trash"></span></button>
{{/if}}
</div>
{{/if}}